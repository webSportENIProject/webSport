@using WUI.Models
@model IEnumerable<RaceModel>

@{
    ViewBag.Title = "Liste de mes inscriptions";
}

@section css {
    @Styles.Render("~/Content/Race/css")
}

<h2>@ViewBag.Title</h2>

<div class="row row-bold">
    <div class="col-xs- col-sm-2 col-md-2 col-lg-2">
        @Html.DisplayNameFor(model => model.Title)
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        @Html.DisplayNameFor(model => model.Description)
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
        @Html.DisplayNameFor(model => model.DateStart)
    </div>
    <div class="col-xs-2 col-sm-1 col-md-2 col-lg-2">
        @Html.DisplayNameFor(model => model.DateEnd)
    </div>
    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
        @Html.DisplayNameFor(model => model.Town)
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">&nbsp;</div> 
</div>


@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.DateStart)
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.DateEnd)
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                @Html.DisplayFor(modelItem => item.Town)
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.ActionLink("Se désinscrire", "Unsubscribe", new { idRace = item.Id })
            </div> 
        </div>
    }
}


@section scripts {
    @Scripts.Render("~/bundles/Race/js")
}